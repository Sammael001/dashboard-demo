

  <div class="background">
    <div class="child login-child blu-child">

      <h1 class="logo welcome">Office Dashboard </h1>
      <p class="logo welcome">DEMO version</p>
      <h1><i class="fas fa-laptop"></i></h1>

      <h1><i class="fas fa-sign-in-alt"></i>  Login</h1>

      <%- include('../partials/messages') %>

      <form action="/users/login" method="POST">
        <div>
          <input
            type="email"
            id="email"
            name="email"
            class="form-class width-60"
            placeholder="Enter Email"
            autofocus
          />
        </div>
        <div>
          <input
            type="password"
            id="password"
            name="password"
            class="form-class width-60"
            placeholder="Enter Password"
          />
          <p>Forgot your Password? <a href="/users/reset">Reset Password</a></p>
        </div>

        <button type="submit" class="blue-butn">Login</button>
      </form>
      <p>No Account? <a href="/users/register">Register</a></p>
    </div>
  </div>
</div>
